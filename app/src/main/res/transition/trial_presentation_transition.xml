<?xml version="1.0" encoding="utf-8"?>

<transitionSet
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together" >


    <fade
        android:duration="250"
        android:fadingMode="fade_in">

        <targets>
            <target android:targetId="@id/oppureText" />
            <target android:targetId="@id/sensorisalvatiText" />
            <target android:excludeId="@id/toolbar_shimmer"/>
        </targets>
    </fade>

    <changeBounds
        android:duration="325"
        android:interpolator="@anim/custom_overshoot_interpolator"
        android:startOffset="2">
        <targets>

            <target android:excludeId="@id/toolbar_shimmer"/>
        </targets>
    </changeBounds>



</transitionSet>